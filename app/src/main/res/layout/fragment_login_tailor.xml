<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginTailor">

    <TextView
        android:id="@+id/textView2"
        style="@style/text_view_login_signup"
        android:text="@string/enter_username_or_email" />

    <EditText
        android:id="@+id/editTextText"
        style="@style/edit_text_login_signup"
        android:autofillHints="Username or Email Address"
        android:ems="10"
        android:hint="@string/username_or_email"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView3"
        style="@style/text_view_login_signup"
        android:text="@string/enter_your_password"/>

    <EditText
        android:id="@+id/editTextLoginTailorPassword"
        style="@style/edit_text_login_signup"
        android:autofillHints="Password"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

</LinearLayout>