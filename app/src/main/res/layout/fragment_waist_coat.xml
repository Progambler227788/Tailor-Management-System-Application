<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <include
        layout="@layout/fragment_upper_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/frontWidth"
        style="@style/text_view_login_signup"
        android:text="@string/enter_front_width"
        />

    <EditText
        android:id="@+id/inputFrontWidth"
        style="@style/edit_text_login_signup"
        android:autofillHints="Front Width"
        android:ems="10"
        android:hint="@string/front_width"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/backWidth"
        style="@style/text_view_login_signup"
        android:text="@string/enter_back_width"
        />

    <EditText
        android:id="@+id/inputBackWidth"
        style="@style/edit_text_login_signup"
        android:autofillHints="Back Width"
        android:ems="10"
        android:hint="@string/back_width"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/individualShoulder"
        style="@style/text_view_login_signup"
        android:text="Enter individual shoulder:"
        />

    <EditText
        android:id="@+id/inputIndividualShoulder"
        style="@style/edit_text_login_signup"
        android:autofillHints="Individual Shoulder"
        android:ems="10"
        android:hint="Individual Shoulder"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/firstButtonPos"
        style="@style/text_view_login_signup"
        android:text="Enter fist button position:"
        />

    <EditText
        android:id="@+id/inputFirstButtonPos"
        style="@style/edit_text_login_signup"
        android:autofillHints="First Button Position"
        android:ems="10"
        android:hint="First Button Position"
        android:inputType="numberDecimal"
        />

</LinearLayout>
</ScrollView>