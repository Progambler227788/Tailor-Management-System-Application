<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include
            layout="@layout/fragment_full_sleeve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/individualShoulder"
            style="@style/text_view_login_signup"
            android:text="Enter individual shoulder:"
            />

        <EditText
            android:id="@+id/inputIndividualShoulder"
            style="@style/edit_text_login_signup"
            android:autofillHints="Individual Shoulder"
            android:ems="10"
            android:hint="Individual Shoulder"
            android:inputType="numberDecimal"
            />
        <TextView
            android:id="@+id/firstButtonPos"
            style="@style/text_view_login_signup"
            android:text="Enter fist button position:"
            />

        <EditText
            android:id="@+id/inputFirstButtonPos"
            style="@style/edit_text_login_signup"
            android:autofillHints="First Button Position"
            android:ems="10"
            android:hint="First Button Position"
            android:inputType="numberDecimal"
            />


        <TextView
            android:id="@+id/halfBack"
            style="@style/text_view_login_signup"
            android:text="Enter half back:"
            />

        <EditText
            android:id="@+id/inputCuffLength"
            style="@style/edit_text_login_signup"
            android:autofillHints="Half Back"
            android:ems="10"
            android:hint="Half Back"
            android:inputType="numberDecimal"
            />
    </LinearLayout>
</ScrollView>